<!DOCTYPE html>
<html>
	<head>
		<% include ./_head %>
		<% if(media) { %>
		<meta name="twitter:card" content="summary_large_image">
		<% } else { %>
		<meta name="twitter:card" content="summary" />
		<% } %>	
		<meta name="twitter:site" content="@quote_helper" />
		<meta name="twitter:title" content="<%=title %>" />
		<meta name="twitter:description" content="<%=description %>" />
		<meta name="twitter:image" content="<%=image %>" />
		<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.5.12/clipboard.min.js"></script>
	</head>
	<body>
		<% include ./_header %>
		<div class="ui main container">
			<blockquote class="twitter-tweet" data-lang="en"><a href="https://twitter.com/quote_helper/status/<%=id %>"></a></blockquote>
			<script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
			<div class="ui action labeled fluid input">
				<div class="ui label">
					URL
				</div>
				<input type="text" id="url_input" readonly value="">
				<button class="ui right button copy" data-clipboard-target="#url_input">
					Copy
				</button>
			</div>
			<div class="ui center aligned container" style="margin-top: 40px;">
				<div class="ui stackable grid">
					<div class="sixteen wide column">
						<img class="ui centered image" src="/static/instructions_1.jpg" />
					</div>
					<div class="sixteen wide column">
						<img class="ui centered image" src="/static/instructions_2.jpg" />
					</div>
					<div class="sixteen wide column">
						<img class="ui centered image" src="/static/instructions_3.jpg" />
					</div>
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function() {
				$('input').val(window.location.href);
				new Clipboard('.copy');
			});
		</script>
		<% include ./_footer %>
	</body>
</html>

