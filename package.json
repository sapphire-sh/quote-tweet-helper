{
  "name": "quote-tweet-helper",
  "version": "1.0.0",
  "description": "https://quote.sapphire.sh",
  "main": "./dist/app.js",
  "scripts": {
    "clean": "babel-node ./webpack/clean.js",
    "build": "npm run clean && babel-node ./webpack/build.js",
    "build-client": "cross-env TARGET=client npm run build",
    "build-server": "cross-env TARGET=server npm run build",
    "prestart": "cross-env NODE_ENV=prod npm run build-server",
    "start": "pm2 start ./app.json",
    "stop": "pm2 stop ./app.json",
    "dev": "cross-env NODE_ENV=dev npm run build-server && node ./dist/app.js",
    "eslint": "eslint --ext .js,.jsx .",
    "test": "npm run build-server && jest",
    "coverage": "jest --coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/quote-tweet-helper.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/quote-tweet-helper/issues"
  },
  "homepage": "https://github.com/sapphiredev/quote-tweet-helper#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "clipboard": "^1.7.1",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "history": "^4.7.2",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "^1.9.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-ga": "^2.3.5",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "request": "^2.83.0",
    "semantic-ui-css": "^2.2.12",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "bluebird": "^3.5.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.13.1",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "supertest": "^3.0.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "globals": {
      "__DEV__": false,
      "__TEST__": true
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    }
  }
}
