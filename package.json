{
  "name": "quote-tweet-helper",
  "version": "1.0.0",
  "description": "https://quote.sapphire.sh",
  "main": "./dist/app.js",
  "scripts": {
    "clean": "babel-node ./webpack/clean.js",
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "cross-env TARGET=client babel-node ./webpack/build.js",
    "build-server": "cross-env TARGET=server babel-node ./webpack/build.js",
    "prestart": "cross-env NODE_ENV=prod npm run build",
    "start": "pm2 start ./app.json",
    "stop": "pm2 stop ./app.json",
    "dev": "cross-env NODE_ENV=dev npm run build-server && node ./dist/app.js",
    "eslint": "eslint --ext .js,.jsx .",
    "test": "npm run build-server && jest",
    "coverage": "jest --coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/quote-tweet-helper.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/quote-tweet-helper/issues"
  },
  "homepage": "https://github.com/sapphiredev/quote-tweet-helper#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "clipboard": "^2.0.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "history": "^4.7.2",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "^1.9.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-ga": "^2.5.3",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.0",
    "semantic-ui-css": "^2.3.3",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "bluebird": "^3.5.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "eslint-plugin-react": "^7.11.0",
    "file-loader": "^1.1.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.22.1",
    "supertest": "^3.1.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "globals": {
      "__DEV__": false,
      "__TEST__": true
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    }
  }
}
